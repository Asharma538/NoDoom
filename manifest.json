{
  "manifest_version": 3,
  "name": "No Doom",
  "version": "1.1.0",
  "description": "Blocks content from social media sites.",
  "permissions": ["declarativeNetRequest", "declarativeNetRequestWithHostAccess", "storage", "tabs", "webNavigation"],
  "host_permissions": [
    "*://*.instagram.com/*",
    "*://*.reddit.com/*",
    "*://*.linkedin.com/*",
    "*://*.facebook.com/*",
    "*://*.x.com/*",
    "*://x.com/*",
    "*://www.x.com/*",
    "*://*.twitter.com/*",
    "*://*.tiktok.com/*",
    "*://*.snapchat.com/*",
    "*://*.pinterest.com/*",
    "*://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
